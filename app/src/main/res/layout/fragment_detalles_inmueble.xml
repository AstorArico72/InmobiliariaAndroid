<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".ui.DetallesInmueble">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/DetallesDireccion"
        android:id="@+id/DetallesImagen"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesDireccion"
        app:layout_constraintTop_toBottomOf="@id/DetallesImagen"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/DetallesDireccion"
        android:id="@+id/DetallesTipoUso"
        android:textStyle="italic"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesSuperficie"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/DetallesTipoUso"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/DetallesSuperficie"
        android:id="@+id/DetallesAmbientes"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesPrecio"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/DetallesAmbientes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesId"
        android:textStyle="italic"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/DetallesPrecio"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/DetallesId"
        android:textSize="15dp"
        android:id="@+id/DetallesCoordenadas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/DetallesCoordenadas"
        android:textSize="20dp"
        android:id="@+id/BotonDisponible"/>

</androidx.constraintlayout.widget.ConstraintLayout>