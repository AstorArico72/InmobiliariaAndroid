<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Perfil"
    android:layout_gravity="top">

    <TextView
        android:id="@+id/NombrePropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RolPropietario"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/NombrePropietario"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DniPropietario"
        app:layout_constraintTop_toBottomOf="@+id/NumeroPropietario"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NumeroPropietario"
        android:textStyle="italic"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/RolPropietario"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/ContactoPropietario"
        app:layout_constraintTop_toBottomOf="@+id/DniPropietario"
        app:layout_constraintStart_toEndOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/ContactoPropietario"
        android:id="@+id/BotonEditarPerfil"/>

</androidx.constraintlayout.widget.ConstraintLayout>